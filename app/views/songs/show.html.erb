<% provide :page_title, @song.title %>

<h1>
  <%= @song.title %>
</h1>
<p>
  <strong>Author:</strong>
  <%= @song.author %>
</p>
<% if current_user.try(:admin?) %>
  <%= link_to 'Edit', edit_song_path(@song), :class => "btn btn-sm btn-default" %>
  <%= link_to 'Back', songs_path, :class => "btn btn-sm btn-default" %>
  <%= link_to 'Delete', @song, method: :delete, data: { confirm: 'Are you sure you wanna delete '+ @song.title + ' ?' }, :class => "btn btn-sm btn-default" %>
  <% else %>
  <%= link_to 'Back', songs_path, :class => "btn btn-sm btn-default" %>
<% end %>
  <button type="button" onclick="smallestFont()" id="smallestFont" class="btn btn-sm btn-default">A</button>
  <button type="button" onclick="mediumFont()" id="mediumFont" class="btn btn-sm btn-default">A</button>
  <button type="button" onclick="largeFont()" id="largeFont" class="btn btn-sm btn-default">A</button>
<div id="song-text-area">
  <p>
    <%= simple_format(@song.text) %>
  </p>
</div>
