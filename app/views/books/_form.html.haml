= form_with(model: book, local: true) do |form|
  - if book.errors.any?
    #error_explanation
      %h2
        = pluralize(book.errors.count, "error")
        prohibited this book from being saved:
      %ul
        - book.errors.full_messages.each do |message|
          %li= message
  .form-group
    = form.label :title
    = form.text_field :title, id: :book_title, :class => "form-control"
  .form-group
    = form.label :description
    = form.text_field :description, id: :book_description, :class => "form-control"
  .form-group
    = form.submit
