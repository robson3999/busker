<% provide :page_title, "Home" %>

<div class="col-xs-12">
  <div class="text-center heading">
    <h1 class="text-center">Welcome to Busker!</h1>
    <p>Find songs, save into collections and sing!</p>
  </div>
<hr>
<h2>Newest <%= link_to "songs", songs_path, :id => "songs-link" %>:</h2>
</div>

<div class="col-xs-12">
    <% @songs.each do |song| %>
        <h3><%= link_to "#{song.title}", song %></h3>
        <p>Author: <%= link_to "#{song.author.name}", author_path(song.author.id), :class => "author-link"%>
        </p>
        <hr>
    <% end %>
  </div>
